<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!--This is just a placeholder image actual gif will be
     shown at runtime-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/agro_logo"
        android:scaleType="centerCrop"
        android:id="@+id/org_gif"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/organization_name"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="70sp"
        android:textAllCaps="true"
        android:layout_centerInParent="true"
        android:id="@+id/name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:text="Digital era of farming"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="31sp"
        android:textStyle="bold" />

    <!-- CAN PLACE APPLICATION ICON IF REQUIRED
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/agro_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        />
        -->
</RelativeLayout>
